<%= search_form_for [:app, @query] do |f| %>
  <div class="row">
    <div class="col-xs-10">
      <div class="form-group">
        <%= f.search_field :job_description_or_job_title_or_job_location_cont, class: 'form-control',
            placeholder: "Description, title or location" %>
      </div>
    </div>
    <div class="col-xs-2">
      <button class="btn btn-primary">Search</button>
    </div>
  </div>
<% end %>

<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Jobs</h3>
    <div class="box-tools">
      <a href="<%= new_app_job_path %>" class="btn btn-block btn-success btn-xs">New job</a>
    </div>
  </div>
  <div class="box-body">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Job title</th>
          <th>Job location</th>
          <th>Job type</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @jobs.each do |job| %>
          <tr>
            <td><%= job.job_title %></td>
            <td><%= job.job_location %></td>
            <td><%= job.job_type %></td>
            <td>
              <a href="<%= app_job_path(job) %>" data-method="GET" data-remote="true">
                Show
              </a>
            </td>
            <td><%= link_to 'Edit', edit_app_job_path(job) %></td>
            <td><%= link_to 'Destroy', app_job_path(job), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="box-footer">
    <div class="row">
      <div class="col-sm-6">
        <%= page_entries_info @jobs %>
      </div>
      <div class="col-sm-6 text-right">
        <%= paginate @jobs %>
      </div>
    </div>
  </div>
</div>