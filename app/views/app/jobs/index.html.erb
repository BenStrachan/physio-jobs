<div class="box">
  <div class="box-header">
  <h3 class="box-title">Jobs</h3>
    <div class="box-tools">
      <ul class="pull-right">
        <a href="<%= new_app_job_path %>" class="btn btn-block btn-default btn-sm">New job</a>
      </ul>
    </div>
  </div>
  <div class="box-body">
    <table class="table table-bordered">
      <thead>
    <tr>
      <th>Job title</th>
      <th>Job location</th>
      <th>Job type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.job_title %></td>
        <td><%= job.job_location %></td>
        <td><%= job.job_type %></td>
        <td><%= link_to 'Show', app_job_path(job) %></td>
        <td><%= link_to 'Edit', edit_app_job_path(job) %></td>
        <td><%= link_to 'Destroy', app_job_path(job), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_app_job_path %>
</div>
</div>
